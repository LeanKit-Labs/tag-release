{
  "name": "tag-release",
  "version": "4.1.0",
  "description": "Automatically Tag and Release Repositories",
  "main": "index.js",
  "bin": {
    "tag-release": "./index.js"
  },
  "scripts": {
    "lint": "jscs ./ && eslint --ignore-path .gitignore ./",
    "lint:fix": "jscs --fix ./ && eslint --fix --ignore-path .gitignore ./",
    "test": "BABEL_ENV=test ava 'test/**/*.js' --require ./test/helpers/setup.js",
    "test:nyan": "npm test -- --tap | tap-nyan",
    "test:watch": "npm test -- --watch",
    "cover": "nyc --reporter=text --reporter=html --check-coverage --statements 97.56 --branches 95.92 --functions 98.39 --lines 97.56 npm test",
    "cover:watch": "onchange 'src/**/*.js' 'test/**/*.js' -- npm run cover",
    "cover:open": "open coverage/index.html",
    "pre-commit": "echo 'Running pre-commit hooks...' && exit 0"
  },
  "pre-commit": [
    "pre-commit",
    "lint"
  ],
  "author": "LeanKit",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "babel-plugin-rewire": "^1.0.0-rc-4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "babel-register": "^6.11.6",
    "better-console": "^0.2.4",
    "chalk": "^1.1.3",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "cowsay": "^1.1.8",
    "detect-indent": "^4.0.0",
    "editor": "^1.0.0",
    "fmt": "^1.0.0",
    "github-api": "^2.2.0",
    "inquirer": "^0.12.0",
    "latest": "^0.2.0",
    "lodash": "^4.0.1",
    "log-update": "^1.0.2",
    "nodegit": "^0.9.0",
    "request": "^2.72.0",
    "semver": "^5.1.0",
    "shelljs": "^0.5.3",
    "simple-git": "^1.21.0",
    "when": "^3.7.7",
    "word-wrap": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^0.15.0",
    "babel-eslint": "^5.0.0-beta6",
    "eslint": "^1.10.3",
    "eslint-config-leankit": "^1.1.0",
    "jscs": "^3.0.4",
    "nyc": "^6.1.1",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "pre-commit": "^1.1.3",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.3",
    "sinon-as-promised": "^4.0.0",
    "tap-nyan": "0.0.2"
  }
}
