{
  "name": "tag-release",
  "version": "6.16.0",
  "description": "Automatically Tag and Release Repositories",
  "main": "./src/index.js",
  "bin": {
    "tag-release": "./bin/tag-release.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeanKit-Labs/tag-release"
  },
  "scripts": {
    "lint": "eslint --fix --ignore-path .gitignore ./",
    "test": "jest --coverage",
    "test:verbose": "npm run test -- --verbose",
    "test:watch": "npm test -- --watchAll",
    "test:verbose:watch": "npm run test:loud -- --watch",
    "cover": "npm test",
    "cover:watch": "npm run test:watch",
    "cover:open": "open coverage/lcov-report/index.html",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "prettier-all-the-things": "find ./**/*.js | xargs prettier --write --use-tabs"
  },
  "lint-staged": {
    "*.js": [
      "prettier --use-tabs --write",
      "git add"
    ]
  },
  "author": "LeanKit",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "babel-plugin-captains-log": "^0.6.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.11.6",
    "better-console": "^0.2.4",
    "chalk": "^2.0.0",
    "cli-table2": "^0.2.0",
    "commander": "^2.9.0",
    "cowsay": "^1.1.8",
    "detect-indent": "^4.0.0",
    "editor": "^1.0.0",
    "fmt": "^1.0.0",
    "github-api": "^3.0.0",
    "inquirer": "^0.12.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.0.1",
    "log-update": "^1.0.2",
    "npm": "^5.0.4",
    "ora": "^3.1.0",
    "rcfile": "^1.0.3",
    "remove-words": "^0.2.0",
    "request": "^2.72.0",
    "semver": "^5.1.0",
    "when": "^3.7.7",
    "word-wrap": "^1.1.0"
  },
  "devDependencies": {
    "eslint-config-leankit": "^4.3.0",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4"
  },
  "jest": {
    "testMatch": [
      "**/specs/**/*.spec.js?(x)"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/specs/"
    ],
    "testEnvironment": "node",
    "clearMocks": true
  }
}
